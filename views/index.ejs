<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MangaDB</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/app.css" />
  </head>
  <%- include('./partials/header.ejs') %>
  <body>
    <div class="collections-container">
      <% for(let i=0; i < manga.length; i++){ %>
      <a href="/manga/<%=manga[i].id; %>"
        ><div class="card" style="width: 12rem">
          <img
            class="card-img-top"
            src="<%= manga[i].img%>"
            alt="<%= manga[i].title %> Cover Art>"
          />
          <div class="card-body d-block">
            <h5 class="card-title"><%=manga[i].title; %></h5>
            <p class="card-subtitle"><%= manga[i].author %></p>
            <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
          </div>
        </div>
      </a>
      <% } %>
      <div class="container button-container d-flex">
        <a href="/collection/add" class="btn btn-danger" style="background-color: #ec3b0f;">Add</a>
      </div>
    </div>
    <footer>
      <div class="footer">
        <h6>MANGADB Â© 2024</h6>
      </div>
    </footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/44b27bb339.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
